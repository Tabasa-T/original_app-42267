<div class="container">
  <h1 class="section-title mb-4">いいねした記録</h1>

  <% if @liked_posts.any? %>
    <div class="post-list">
      <% @liked_posts.each do |post| %>
        <div class="post-card">
          <p class="post-author"><strong><%= post.user.nickname %></strong> さんの記録</p>

          <%= link_to post_path(post), class: "post-link" do %>
            <p><strong>かかった時間:</strong> <%= post.duration %>分</p>
            <p><strong>成果:</strong> <%= truncate(post.result, length: 80) %></p>

            <div class="post-image">
              <% if post.image.attached? %>
                <%= image_tag post.image, class: "img-fluid rounded" %>
              <% else %>
                <%= image_tag "notebook3.png", class: "img-fluid rounded" %>
              <% end %>
            </div>

            <p><strong>投稿日:</strong> <%= post.created_at.strftime('%Y年%m月%d日') %></p>
            <p><strong>いいね数:</strong> <%= post.likes.count %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">まだ「いいね」した投稿がありません。</p>
  <% end %>
</div>
